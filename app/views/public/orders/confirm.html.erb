<h4>>購入情報確認</h4>

<table>
  <thead class="">
    <tr>
      <th>商品名</th>
      <th>単価</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>

  <tbody class="">
  <% @sum_price = 0 %>
  <% @cart_items.each do |cart| %>
    <% if cart.customer_id == current_customer.id %>
    <tr>
      <td>
        <%= attachment_image_tag(cart.item, :image_id, fallback: "noimage.jpg", size'60x20') %>
        <%= cart.item.name, %>
      </td>
      <td>
        <% price_include_tax = crat.item.price * 1.1 %>
        <%= price_include_tax.floor %>
      </td>
      <td><%= cart.amount %></td>
      <td>
        <% subtotal_price = price_include_tax.floor * cart.amount %>
        <%= subtotal_price.floor %>
      </td>
    </tr>
    <% @sum_price += subtotal_price.floor %>
    <% end %>
  <% end %>
  </tbody>
</table>

<table>
  <tr>
    <th>送料</th>
    <td><%= @order.shipping_cost %></td>
  </tr>
  <tr>
    <th>商品合計</th>
    <td><%= @sum_price %></td>
  </tr>
  <tr>
    <th>請求金額</th>
    <td><% @order.total_payment = @order.shipping_cost + @sum_price %></td>
  </tr>
</table>

  <h4>支払い方法</h4>
  <%= @order.payment_method %>


  <h4>お届け先</h4>
  <%= @order.post_code %> <%= @order.address %> <br/>
  <%= @order.name %>






