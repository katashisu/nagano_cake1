<h3>注文履歴詳細</h3>

<h4>注文情報</h4>
<table class="table table-bordered">
  <tr>
    <th class="active">注文日</th>
    <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
  </tr>
  <tr>
    <th class="active">配送先</th>
    <td>
    <%= @order.postal_code %><br>
    <%= @order.address %><br>
    <%= @order.name %>
    </td>
  </tr>
  <tr>
    <th class="active">支払方法</th>
    <td><%= @order.payment_method %></td>
  </tr>
  <tr>
    <th class="active">ステータス</th>
    <td><%= @order.order_status %></td>
  </tr>
</table>

<h4>請求情報</h4>
<table class="table table-bordered">
  <tr>
    <th class="active">商品合計</th>
    <td><%= @order.total_payment-@order.shipping_cost %></td>
  </tr>
  <tr>
    <th class="active">配送料</th>
    <td><%= @order.shipping_cost %></td>
  </tr>
  <tr>
    <th class="active">ご請求額</th>
    <td><%= @order.total_payment %></td>
  </tr>
</table>

<h4>注文内容</h4>
<table class="table table-bordered">
  <thead>
    <tr class="active">
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
  <% @order.order_items.each do |order_item| %>
    <tr>
      <td><%= order_item.item.name %></td>
      <td><%= (order_item.item.price*1.1).floor %></td>
      <td><%= order_item.amount %></td>
      <td><%= order_item.amount*(order_item.item.price*1.1).floor %></td>
    </tr>
  <% end %>
  </tbody>
</table>




