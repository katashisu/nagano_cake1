<h3>注文情報入力</h3>

<h4>支払方法</h4>
  <%= form_with(model: @order, local: true, url: public_orders_confirm_path, method: :post) do |f| %>

  <%= f.radio_button :payment_method, :クレジットカード ,checked: "checked" %>クレジットカード<br>
  <%= f.radio_button :payment_method, :銀行振込 %>銀行振込

<h4>お届け先</h4>
  <%= f.radio_button :selected_address, 1 ,checked: "checked"%>ご自身の住所<br>
  <%= current_customer.postal_code %>
  <%= current_customer.address %>
  <br>
  <%= current_customer.last_name %><%= current_customer.first_name %><br>

　<%= f.radio_button :selected_address, 2 %>登録済住所から選択<br>
  <%= f.collection_select(:delivery, current_customer.deliveries.all, :id, :full_delivery, include_blank:"--選択してください--") %><br>

  <%= f.radio_button :selected_address, 3 %>新しいお届け先<br>
  <p>郵便番号(ハイフンなし)
  <%= f.text_field :postal_code %></p>
  <p>住所
  <%= f.text_field :address %></p>
  <p>宛名
  <%= f.text_field :name %></p>

  <%= f.submit :"確認画面へ進む", class: "btn btn-primary" %>
  <% end %>

