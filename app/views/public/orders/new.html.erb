<h3>注文情報入力</h3>

<h4>支払方法</h4>
  <%= form_with url: public_orders_confirm_path, method: :post do |f| %>

  <%= f.radio_button :payment_method, :credit %>クレジットカード<br>
  <%= f.radio_button :payment_method, :bank %>銀行振込

<h4>お届け先</h4>
  <%= f.radio_button :"selected_addrres", "customer_addrres" %>ご自身の住所<br>
  <%= current_customer.postal_code %>
  <%= current_customer.address %>
  <br>
  <%= current_customer.last_name %><%= current_customer.first_name %><br>

　<%= f.radio_button :"selected_addrres", "delivery_addrres" %>登録済住所から選択<br>
  <%= f.collection_select :delivery, Delivery.all, :id, :postal_code_and_address_and_name, include_blank:"--選択してください--"  %><br>

  <%= f.radio_button :"selected_addrres", "new_delivary_addrres" %>新しいお届け先<br>
  <p>郵便番号(ハイフンなし)
  <%= f.text_field :postal_code %></p>
  <p>住所
  <%= f.text_field :addrres %></p>
  <p>宛名
  <%= f.text_field :name %></p>

  <%= f.submit :"確認画面へ進む", class: "btn btn-primary" %>
  <% end %>



