<div class="container">

	<div class="row">

		<div class="col-xs-3">
		</div>

		<div class="col-xs-9">

			<h1>商品一覧</h1>
			<p>(全<%= @items.total_count %>件)</p>

			<% @items.each do |item| %>

			<div class="box">
				<div>
					<%= link_to public_item_path(item) do %>
						<%= attachment_image_tag item, :image, :fill,45,45, fallback: "noimage.jpg",size:"200x200" %>
					<% end %>
				</div>

				<div>
					<%= item.name %>
				</div>

				<div>
					¥<%= item.price %>
				</div>
			</div>

			<% end %>

		</div>

	</div>

	<div class="text-center"><%= paginate @items %></div>

</div>