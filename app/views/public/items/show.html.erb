<div class="text-center">
	<%= flash[:notice] %>
</div>

<div class="container">

	<div class="row">

		<div class="col-md-3">
			<%= render 'owner/genres/genre_search', genres: @genres %>
		</div>

		<div class="col-md-3">
			<div>
				<%= attachment_image_tag @item, :image, :fill,45,45, fallback: "noimage.jpg",size:"300x200" %>
			</div>
		</div>

		<div class="col-md-offset-1 col-md-5">
			<h1><%= @item.name %></h1>
			<h5><%= @item.introduction %></h5>
			<h2 style="display: inline;">¥<%= (@item.price*1.1).floor %></h2>(税込)


			<%= form_for(@cart_item, url:public_cart_items_path,method: :post) do |f| %>

				<%= f.hidden_field :item_id, :value => @item.id %> <!-- cart_itemにitem_idを送る為 -->

				<%= f.select :amount, [*(1..30)], include_blank:"--選択--"%>

				<%= f.submit "カートに入れる", class: "btn btn-primary" %>

			<% end %>
		</div>

	</div>

</div>