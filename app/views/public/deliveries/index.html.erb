<div class="container">
  <p>配送先登録 / 一覧</p>


    <%= form_for(@delivery, url: {controller: 'deliveries', action: 'index'}) do |f| %>

      <% if @delivery.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
            <h3><%= @delivery.errors.count %>error prohibited this obj from being saved:</h3>
          <ul>
              <% @delivery.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.label :郵便番号（ハイフンなし） %>
      <%= f.text_field :postal_code, class: '' %>

      <%= f.label :住所 %>
      <%= f.text_field :address, class: ''%>

      <%= f.label :宛名 %>
      <%= f.text_field :name, class: ''%>

      <%= f.submit "登録する", class: ''%>
    <% end %>

  <table>
    <thead class="">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @customer.deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.postal_code %></td>
        <td><%= delivery.address %></td>
        <td><%= delivery.name %></td>
        <td>
          <%= link_to '編集する', edit_public_delivery_path(delivery.id), class:"btn-sm btn-success" %>　
          <%= link_to '削除する', public_delivery_path(delivery.id), method: :delete, "data-confirm" => "本当に消しますか?", class:"btn-sm btn-danger" %>
        </td>
      <% end %>
      </tr>
    </tbody>
  </table>
</div>
