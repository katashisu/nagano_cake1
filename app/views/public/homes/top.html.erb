<div class="container">

	<div class="row">

		<div class="col-xs-3">
			<%= render 'owner/genres/genre_search', genres: @genres %>
		</div>

		<div class="col-xs-9">

			<p>
			ようこそ、NaganoCakeへ！<br>
			このサイトでは、ケーキ販売のECサイトになります。<br>
			会員でない方も商品の閲覧はできますが、<br>
			購入には会員登録が必要になります。
			</p>

			<h1>オススメ商品</h1>

			<% @recommended_items.each do |recommended_item| %>

				<div class="recommended_box">

					<div class="recommended_img">
						<%= link_to public_item_path(recommended_item.id) do %>
							<%= attachment_image_tag recommended_item, :image, :fill,45,45, fallback: "noimage.jpg",size:"200x150" %>
						<% end %>
					</div>

					<div>
						<%= recommended_item.name %>
					</div>

					<div>
						¥<%= (recommended_item.price*1.1).floor %>
					</div>

				</div>

			<% end %>

			<%= link_to "もっと見る>>", public_items_path %>

		</div>

	</div>
</div>


