<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
  <nav>
      <body>
    <!-- <ul class="navbar-nav mr-auto w-75 nav-justified"> -->
        <% if owner_signed_in? %>
          <div class="admin-message">管理者としてログインしています</div>
          <li class="nav-item"><%= link_to '商品一覧',  owner_items_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to '会員一覧', owner_customers_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to '注文履歴一覧', owner_orders_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ジャンル一覧', owner_genres_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ログアウト', destroy_owner_session_path, method: :delete, class: 'nav-link' %></li>


        <% elsif customer_signed_in? %>
          <p>ようこそ<%= current_customer.last_name %><%= current_customer.first_name %>さん！</p>
          <li class="nav-item"><%= link_to 'マイページ', public_items_path(current_customer.id), class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to '商品一覧',  public_orders_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'カート', public_cart_items_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: 'nav-link' %></li>

        <% else %>
          <li class="nav-item"><%= link_to 'About', public_homes_about_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to '商品一覧', public_orders_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to '新規登録', new_customer_registration_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ログイン', new_customer_session_path, class: 'nav-link' %></li>
        <% end %>

    </ul>
    </body>
  </nav>
  </header>
    <%= yield %>
  </body>
</html>
