<% if @item.errors.any? %>

    <%= @item.errors.count %>errors prohibited this obj from being saved:

    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

<% end %>

<div class="container">

	<div class="row">



			<%=form_for(@item, url:owner_item_path(@item),method: :patch) do |f| %>

				<div class="col-md-4">

				<h4>商品編集</h4>

				<%= f.attachment_field :image %>

				</div>

		<div class="col-md-3 col-offset-5">

				<div class="form_group">
					<dt><%= f.label :name, "商品名" %></dt>
					<dd><%= f.text_field :name, class: 'form-control' %></dd>
				</div>

				<div class="form_group">
					<dt><%= f.label :introduction, "商品説明" %></dt>
					<dd><%= f.text_area :introduction, class: 'form-control' %></dd>
				</div>

				<dt><%= f.label :genre_id, "ジャンル" %></dt>
				<dd><%= f.collection_select :genre_id, Genre.all, :id, :name, {},class: 'form-control', include_blank:"--選択してください--" %></dd>

				<div class="form_group">
					<dt><%= f.label :price, "税抜価格" %></dt>
					<dd><%= f.text_field :price, class: 'form-control' %></dd> 円
				</div>

				<dt><%= f.label :is_active, "販売ステータス" %></dt>
				<dd><%= f.select :is_active, [["販売中","true"],["売り切れ","false"]], {},class: 'form-control', include_blank:"--選択してください--" %></dd>

				<%= f.submit '変更を保存', class: "btn btn-primary", style: "margin-top: 15px;"%>

			<% end %>

		</div>

	</div>

</div>