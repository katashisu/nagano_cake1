<h3 class="title">ジャンル追加・一覧</h3>

<%= form_for @genre, url:owner_genres_path do |f| %>
<%= f.label :genre, "ジャンル" %>
<%= f.text_field :name %>
<%= f.radio_button :is_active, true %>有効
<%= f.radio_button :is_active, false %>無効
<%= f.submit "追加", class: "btn btn-info" %>
<% end %>

<table class="table">
  <thead>
    <tr class="active">
      <th>ジャンル</th>
      <th>状態</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= genre.is_active ? "有効" : "無効" %></td>
        <td><%= link_to "編集", edit_owner_genre_path(genre.id), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>