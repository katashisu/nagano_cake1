<h3>注文履歴一覧</h3>

<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
    <tbody>
    <%= @orders.each do |order| %>

    <tr>
      <td><%= link_to order.created_at, owner_orders_path %></td>
      <td><%= order.customer.full_name %></td>
      <td><%= order.amount %></td>
      <td><%= order.order_status %></td>
    </tr>
    <% end %>
  </tbody>
</table>
    <%= paginate @orders %>
