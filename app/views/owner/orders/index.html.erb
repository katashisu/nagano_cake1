<h3>注文履歴一覧</h3>

<table class="table">
  <thead>
    <tr class="active">
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
    <tbody>
    <% @orders.each do |order| %>

    <tr>
      <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), owner_order_path(order) %></td>
      <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
      <td>
      <% order.order_items.each do |order_item| %>
        <%= order_item.amount %>
      <% end %>
      </td>
      <td><%= order.order_status %></td>
    </tr>
    <% end %>
  </tbody>
</table>
    <%= paginate @orders %>
