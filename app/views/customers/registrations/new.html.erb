<div class="container">
  <div class="col-md-8 col-md-offset-2">
  <h3>新規登録会員</h3><br/>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="form-group">
      <div class="col-xs-4"><%= f.label :名前 %></div>(姓)
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>（名）
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>

    <div class="form-group">
      <div class="col-xs-4"><%= f.label :フリガナ%></div>(セイ)
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>（メイ）
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div>

    <div class="form-group">
      <div class="col-xs-4"><%= f.label :メールアドレス %></div>
      <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <div class="col-xs-4"><%= f.label :郵便番号（ハイフンなし） %></div>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>

    <div class="form-group">
      <div class="col-xs-4"><%= f.label :住所 %></div>
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>

    <div class="form-group">
      <div class="col-xs-4"><%= f.label :電話番号（ハイフンなし） %></div>
      <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
    </div>

    <div class="form-group">
      <div class="col-xs-4"><%= f.label :パスワード（6文字以上） %></div>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <div class="col-xs-4"><%= f.label :パスワード（確認用） %></div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
        <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-success" %>
        </div>
  </div>
  <% end %>
  <br/>
  <h4>既に登録済みの方</h4>
  <table>
    <tr>
      <td><%= render "customers/shared/links" %></td>
      <td>からログインしてください。</td>
    </tr>
  </table>
  </div>
</div>