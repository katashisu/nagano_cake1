<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
<strong class="red-border px-3 pb-1">登録情報変集</strong>
    <div class="field">
      <tr>
      <th><%= f.label :名前 %>（姓）</th>
      <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>（名）</td>
      <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
    </tr>
    </div>

    <div class="field">
      <%= f.label :フリガナ %>(セイ)
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>（メイ）
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %>
      <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :郵便番号（ハイフンなし） %>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>

    <div class="field">
      <%= f.label :住所 %>
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>

    <div class="field">
      <%= f.label :電話番号（ハイフンなし） %>
      <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
    </div>

  <%= f.submit "変更を保存する", class: "btn btn-primary" %>
  <%= link_to "退会する" ,public_customers_exit_path, class:"btn btn-danger" %>
<% end %>